<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UznaniaObciazenia_Lista">

    <Button
        android:id="@+id/button_wstecz_uznania_obciazenia_lista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Wstecz"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView_uznania_obciazenia_lista" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oczekujące"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNaglowek_uznania_obciazenia_lista"></TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_uznania_obciazenia_lista"
        android:layout_width="411dp"
        android:layout_height="520dp"
        android:layout_marginTop="100dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/addImg_uznania_obciazenia_lista"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/addcircle"
        app:layout_constraintCircleRadius="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView_uznania_obciazenia_lista" />

    <TextView
        android:id="@+id/textViewIDuzyt_uznania_obciazenia_lista"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:minHeight="50dp"
        android:text="Id Użytkownika"
        app:layout_constraintEnd_toStartOf="@+id/addImg_uznania_obciazenia_lista"
        app:layout_constraintStart_toEndOf="@+id/button_wstecz_uznania_obciazenia_lista"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView_uznania_obciazenia_lista" />

    <TextView
        android:id="@+id/textViewNaglowek_uznania_obciazenia_lista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uznania i Obciążenia"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/recyclerView_uznania_obciazenia_lista"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>